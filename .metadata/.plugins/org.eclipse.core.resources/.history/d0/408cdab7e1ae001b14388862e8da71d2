import sys
from PyQt5 import uic
from PyQt5.QtWidgets import QMainWindow, QApplication
from dask.array.random import random

form_class = uic.loadUiType("myqt04.ui")[0]

class WindowClass(QMainWindow, form_class):

    def __init__(self):
        super().__init__()
        self.setupUi(self)
        
        self.pb.clicked.connect(self.clickPb)
        
    def clickPb(self):
        mine = self.leMine.text()
        rnd = random.random()
        if rnd >= 0.66:
            com = "가위"
        elif rnd < 0.66 and rnd > 0.33:
            com = "바위"
        else:
            com = "보"
        

if __name__ == '__main__':
   app = QApplication(sys.argv)
   myWindow = WindowClass()
   myWindow.show()
   sys.exit(app.exec_())